<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Recipient.RecipientFragment">

    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.persidius.eos.aurora.ui.recipient.RecipientViewModel" />
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp" >

            <!-- Tag0 Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:clickable="true"
                android:visibility="@{model.tagSlots > 0 ? View.VISIBLE : View.GONE}"
                android:onClick="@{model::selectTag0}"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tag 1"
                    android:textSize="18sp"
                    android:isBold="@{model.tagSelected == 0}"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@={model.tag0}"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:isBold="@{model.tagSelected == 0}"
                    />
            </LinearLayout>
            <!-- Tag1 Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10sp"
                android:clickable="true"
                android:visibility="@{model.tagSlots > 1 ? View.VISIBLE : View.GONE}"
                android:onClick="@{model::selectTag1}"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tag 2"
                    android:textSize="18dp"
                    android:isBold="@{model.tagSelected == 1}"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{model.tag1}"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:isBold="@{model.tagSelected == 1}"
                    />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressStreet"
                android:hint="Stradă" >
                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={model.addressStreet}">
                    <requestFocus/>
                </AutoCompleteTextView>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Număr"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={model.addressNumber}"
                    android:inputType="textNoSuggestions"
                    />

            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="UAT" >

                    <com.persidius.eos.aurora.ui.components.InstantAutoComplete
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions|textFilter"
                        android:text="@={model.uat}"
                        android:id="@+id/uat"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Localitate" >

                    <com.persidius.eos.aurora.ui.components.InstantAutoComplete
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textNoSuggestions|textFilter"
                        android:text="@={model.loc}"
                        android:id="@+id/loc"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mărime" >

                    <com.persidius.eos.aurora.ui.components.InstantAutoComplete
                        android:enabled="@{model.sizeSelectable}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.size}"
                        android:id="@+id/size"
                        app:filterIgnoreText="true"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    >

                    <com.persidius.eos.aurora.ui.components.InstantAutoComplete
                        android:enabled="@{model.streamSelectable}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@={model.stream}"
                        android:id="@+id/stream"
                        app:filterIgnoreText="true"
                        android:hint="Flux"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@={model.groupId}"
                    android:id="@+id/group"
                    android:hint="Grup"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="50"
                    android:minLines="1"
                    android:hint="Comentarii"
                    android:text="@={model.comments}"
                    />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </ScrollView>
</layout>