<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.searchRecipient.SearchRecipientFragment" >
    <data>
        <import type="android.view.View" />
        <variable
            name="model"
            type="com.persidius.eos.aurora.ui.searchRecipient.SearchRecipientViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_weight="0"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14sp"
                android:theme="@style/AppTheme.Inverted"
                app:hintEnabled="false"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:ems="10"
                    android:hint="Căută cod/adresă"
                    android:inputType="textVisiblePassword|textNoSuggestions"
                    android:text="@={model.searchTerm}" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="@{(model.results.size() == 0 &amp;&amp; model.searchTerm.length > 1) ? View.VISIBLE : View.GONE}"
                android:text="Niciun rezultat :("
                android:textSize="20sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/resultList"
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:visibility="@{(model.results.size() > 0) ? View.VISIBLE : View.GONE}"
                />
        </LinearLayout>
    </LinearLayout>
</layout>